<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
        android:background="#81C2C2C2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
            android:backgroundTint="#F5F5F5"
            android:layout_centerInParent="true"
            app:cardElevation="@dimen/_5sdp"
            app:cardCornerRadius="@dimen/_10sdp"
            android:layout_margin="@dimen/_50sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:orientation="vertical"
                android:layout_margin="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/tv_dlg_header"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/_14sdp"
                    android:fontFamily="@font/cairo_bold"
                    android:layout_gravity="center_horizontal"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <ImageView
                    android:id="@+id/img_dlg_alert"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"/>

            <TextView
                    android:id="@+id/tv_dlg_msg"
                    android:textColor="@color/gray_dark"
                    android:fontFamily="@font/cairo_reguler"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            <ru.dimorinny.floatingtextbutton.FloatingTextButton
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    app:floating_background_color="@color/teal"
                    app:floating_title="Close"
                    app:floating_title_color="@android:color/white"
                    android:id="@+id/btn_dlg_close"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/_10sdp"
                    />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>
